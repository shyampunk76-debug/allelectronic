# Copy this file to .env and set the values before running locally
# MongoDB connection string for Atlas or other hosted MongoDB
# Example (replace <user>, <password>, <cluster> and <dbname>):
# MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>.mongodb.net/allelectronic?retryWrites=true&w=majority
MONGODB_URI=

# Admin credentials used by the admin console (set these in Vercel project env)
ADMIN_USER=Admin
ADMIN_PASS=Passw0rd

# JWT secret for admin session tokens (change in production)
JWT_SECRET=ae-admin-secret-change-this
# Environment Configuration

# Server Settings
PORT=3000
NODE_ENV=development

# Email Configuration (for sending confirmation emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=info@allelectronic.com

# Database Configuration (when you add a database)
# DATABASE_URL=mongodb://localhost:27017/allelectronic
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=allelectronic
# DB_USER=admin
# DB_PASSWORD=your-password

# API Keys
# GOOGLE_MAPS_API_KEY=your-api-key
# STRIPE_API_KEY=your-api-key

# Frontend Settings
REACT_APP_API_URL=http://localhost:3000/api
REACT_APP_GOOGLE_MAPS_KEY=your-api-key
